@model NetProductApp.Models.Product

<h1>Edit Product</h1>

<form method="post" action="/Products/Edit">
    <input type="hidden" name="Id" value="@Model.id" />

    <label for="name">Name:</label>
    <input type="text" id="name" name="Name" value="@Model.name" required />
    <br />

    <label for="price">Price:</label>
    <input type="number" step="0.01" id="price" name="Price" value="@Model.price" required />
    <br />

    <label for="image_path">Upload Image:</label>
    <input type="file" id="image_path" name="imageFile" accept="image/*" />
    <br />

    <button type="submit">Update</button>
</form>